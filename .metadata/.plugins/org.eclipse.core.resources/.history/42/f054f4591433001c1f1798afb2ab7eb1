package polynomial;

public class Monomial {
  private final int degree;
  private int coEfficient;

  public Monomial(int... polyTerms) {
    if (polyTerms.length > 0) {
      this.coEfficient = polyTerms[0];
      if (polyTerms.length > 1) {
        this.degree = polyTerms[1];
      } else {
        this.degree = 0;
      }
    } else {
      this.coEfficient = 0;
      this.degree = 0;
    }
  }

  public int getCoEfficient() {
    return this.coEfficient;
  }

  public int getPower() {
    return this.degree;
  }
}
